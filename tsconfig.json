{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@app/*": [
        "src/app/*"
      ],
      "@providers/*": [
        "src/cm/providers/*"
      ],
      "@constants/*": [
        "src/cm/constants/*"
      ],
      "@class/*": [
        "src/cm/class/*"
      ],
      "@components/*": [
        "src/cm/components/*"
      ],
      "@styles/*": [
        "src/cm/styles/*"
      ],
      "@hooks/*": [
        "src/cm/hooks/*"
      ],
      "@lib/*": [
        "src/cm/lib/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@fonts/*": [
        "src/fonts/*"
      ],
      "@context/*": [
        "src/cm/context/*"
      ],
      "@cm/*": [
        "src/cm/*"
      ]
    },
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
